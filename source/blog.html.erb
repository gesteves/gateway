<section class="content" id="main-content" aria-labelledby="hed">
  <header class="content__header">
    <h2 id="hed">
      <% if current_page_number == 1 %>
        <%= title %>
      <% else %>
        <%= "#{title} â€“ Page #{current_page_number} "%>
      <% end %>
    </h2>
  </header>
  <main>
    <ol class="content__list">
      <% items.each do |entry| %>
        <li><%= partial 'partials/entry_compact', locals: { entry: entry, in_list: true } %></li>
      <% end %>
    </ol>

    <% if next_page_number.present? || previous_page_number.present? %>
      <nav class="pagination">
      <% if previous_page_number.present? %>
        <% if previous_page_number == 1 %>
          <%= link_to "Previous", "/blog/index.html", class: "pagination__link pagination__link--previous" %>
        <% else %>
          <%= link_to "Previous", "/blog/page/#{previous_page_number}/index.html", class: "pagination__link pagination__link--previous" %>
        <% end %>
      <% else %>
        <span class="pagination__link pagination__link--previous pagination__link--inactive">Previous</span>
      <% end %>
      <% if next_page_number.present? %>
        <%= link_to "Next", "/blog/page/#{next_page_number}/index.html", class: "pagination__link pagination__link--next"  %>
      <% else %>
        <span class="pagination__link pagination__link--next pagination__link--inactive">Next</span>
      <% end %>
      </nav>
    <% end %>
  </main>
</section>
