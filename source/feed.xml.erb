<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text"><%= data.site.name %></title>
  <updated><%= blog.articles.map(&:date).max.rfc3339 %></updated>
  <id><%= atom_tag(full_url("/index.html"), blog.articles.map(&:date).max) %></id>
  <link rel="alternate" type="text/html" href="<%= full_url("/index.html") %>"/>
  <link rel="self" type="application/atom+xml" href="<%= full_url("/feed.xml") %>"/>
  <rights>© 2006–<%= Time.now.strftime('%Y') %> <%= data.site.copyright %></rights>
  <% blog.articles.slice(0, 25).each do |article| %>
    <entry>
      <title><%= escape_html article.title %></title>
      <link rel="alternate" type="text/html" href="<%= full_url(article.url) %>"/>
      <id><%= atom_tag(full_url(article.url), (article&.data&.updated || article.date)) %></id>
      <updated><%= article&.data&.updated&.rfc3339 || article.date.rfc3339 %></updated>
      <published><%= article.date.rfc3339 %></published>
      <author>
        <name><%= article.data.author %></name>
      </author>
      <content type="html">
        <%= escape_html article.body %>
      </content>
    </entry>
  <% end %>
</feed>
