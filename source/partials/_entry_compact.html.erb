<article class="entry entry--compact <%= "entry--in-list" if defined?(in_list) && in_list %>" id="main-content" aria-labelledby="hed">
  <header class="entry__header">
      <p class="entry__meta">
        <% if entry.draft %>
          <span class="entry__draft">Draft</span>
        <% end %>
        <span><%= link_to DateTime.parse(entry.published_at).strftime('%A, %B %-e, %Y'), entry.path %></span>
        <% if entry.contentfulMetadata.tags.present? %>
          <span><%= entry.contentfulMetadata.tags.sort { |a, b| a.name <=> b.name }.map { |tag| link_to tag.name, entry.contentType == "Link" ? "/links/tags/#{tag.id}/index.html" : "/blog/tags/#{tag.id}/index.html" }.join(', ') %></span>
        <% end %>
      </p>
    <h2 id="hed">
      <% if entry.contentType == "Link" %>
        <% if entry.noFollow %>
          <%= link_to remove_widows(entry.title), entry.linkUrl, rel: "nofollow" %>
        <% else %>
          <%= link_to remove_widows(entry.title), entry.linkUrl %>
        <% end %>
      <% else %>
        <%= link_to remove_widows(entry.title), entry.path %>
      <% end %>
    </h2>
  </header>
  <main class="entry__body">
    <% if entry.contentType == "Link" %>
      <%= render_body(entry.body) %>
    <% else %>
      <%= markdown_to_html(remove_widows(entry.summary)) %>
    <% end %>
  </main>
</article>
