<section class="section" aria-labelledby="reading">
  <h2 id="reading">Reading</h2>
  <ol>
    <% data.books.slice(0, ENV.fetch('GOODREADS_COUNT', 5).to_i).each do |book| %>
      <li class="card">
        <%= card_thumbnail(image_path: book.image_url, alt: "Cover of the book “#{book.title}”, by #{book.authors.join(', ')}.") %>
        <div class="card__text">
          <h3><a href="<%= book.goodreads_url %>"><%= book.title %></a></h3>
          <p class="section__meta"><%= join_authors book.authors %> <%= "&middot; #{book.published}" unless book.published.blank? %></p>
        </div>
      </li>
    <% end %>
  </ol>
</section>
