<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= full_url "/" %></loc>
    <lastmod><%= Time.now.strftime('%Y-%m-%d') %></lastmod>
  </url>
  <url>
    <loc><%= full_url "/archives/" %></loc>
    <lastmod><%= blog.articles.map(&:date).max.strftime('%Y-%m-%d') %></lastmod>
  </url>
  <% blog.articles.each do |article| %>
    <url>
      <loc><%= full_url article.url %></loc>
      <lastmod><%= article.date.strftime('%Y-%m-%d') %></lastmod>
    </url>
  <% end %>
</urlset>
